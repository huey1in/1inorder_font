@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
		min-height: 100vh;
		background-color: #FFF5F8;
		background-image: radial-gradient(circle at 10% 20%, rgba(255, 182, 193, 0.4) 0%, transparent 20%),
						  radial-gradient(circle at 90% 80%, rgba(255, 218, 224, 0.4) 0%, transparent 20%);
		padding: 30rpx 24rpx;
}
.avatar-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 40rpx;
		margin-bottom: 30rpx;
}
.avatar-wrapper {
		position: relative;
		width: 180rpx;
		height: 180rpx;
}
.avatar {
		width: 180rpx;
		height: 180rpx;
		border-radius: 50%;
		border: 6rpx solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.3);
}
.avatar-edit {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 50rpx;
		background-color: rgba(0, 0, 0, 0.5);
		border-radius: 0 0 90rpx 90rpx;
		display: flex;
		justify-content: center;
		align-items: center;
}
.edit-text {
		font-size: 22rpx;
		color: #FFFFFF;
}
.avatar-tip {
		margin-top: 20rpx;
		font-size: 26rpx;
		color: #B8A9C9;
}
.form-section {
		background-color: rgba(255, 255, 255, 0.9);
		border-radius: 40rpx;
		overflow: hidden;
		box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.1);
		-webkit-backdrop-filter: blur(10px);
		        backdrop-filter: blur(10px);
}
.form-item {
		display: flex;
		flex-direction: row;
		align-items: center;
		padding: 36rpx 40rpx;
		border-bottom: 1px solid rgba(255, 228, 236, 0.6);
}
.form-item:last-child {
		border-bottom: none;
}
.label {
		width: 140rpx;
		font-size: 30rpx;
		color: #5D4E6D;
		font-weight: 500;
}
.input {
		flex: 1;
		font-size: 30rpx;
		color: #5D4E6D;
}
.placeholder {
		color: #B8A9C9;
}
.submit-btn {
		margin-top: 60rpx;
		padding: 32rpx;
		background: linear-gradient(135deg, #FFB6C1 0%, #FF69B4 100%);
		border-radius: 40rpx;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.3);
}
.submit-btn:active {
		transform: scale(0.98);
}
.submit-text {
		font-size: 32rpx;
		color: #FFFFFF;
		font-weight: 800;
		letter-spacing: 2px;
}
